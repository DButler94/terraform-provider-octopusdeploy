; indicate this is the root of the project
root = true

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{psm1,ps1,cs,cshtml}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

